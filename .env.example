# OptionsAI Copilot Environment Variables
# Copy this file to .env and fill in your actual API keys

# Redis Configuration (Required)
REDIS_URL=redis://localhost:6379

# Database Configuration (Required)
DATABASE_URL=postgresql+asyncpg://optionsai:password123@localhost/optionsai_db

# Market Data APIs (At least one required)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
POLYGON_API_KEY=your_polygon_key_here
FINNHUB_API_KEY=your_finnhub_key_here

# News APIs (Optional but recommended)
NEWS_API_KEY=your_newsapi_key_here

# HuggingFace (Optional - uses free tier if not provided)
HUGGINGFACE_API_KEY=your_huggingface_key_here

# Application Settings
DEBUG=true
LOG_LEVEL=INFO